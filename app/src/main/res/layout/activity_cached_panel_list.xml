<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mackwell.nlight_beta.activity.CachedPanelListActivity">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cached_panel_list_listView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cached_panel_list_search_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search IP"
        android:id="@+id/cached_panel_list_search_button"
        android:onClick="search"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cached_panel_list_remove_button"
        android:layout_toStartOf="@+id/cached_panel_list_remove_button"
        android:layout_marginRight="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove IP"
        android:id="@+id/cached_panel_list_remove_button"
        android:onClick="remove"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cached_panel_list_listView"
        android:layout_alignEnd="@+id/cached_panel_list_listView" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cached_panel_list_ip_editText"
        android:layout_alignBottom="@+id/cached_panel_list_search_button"
        android:layout_centerHorizontal="true"
        android:inputType="phone"/>

</RelativeLayout>
